my $host_list = $host_obj->get_hosts_by_group();

if ($host_list->{result}) {
#    print Dumper($host_list->{result});exit
    print to_json({
        all => {
            hosts => [ map { $_ = $_->{host} } @{$host_list->{result}} ],
            vars => {
                ansible_python_interpreter => "python2",
                ansible_ssh_private_key_file => "~/.ssh/b",
                ansible_ssh_user => "root",
            },
        }
    },{
        indent => 1,
        space_after => 1,
    });
}
